<% if current_page?(root_path) && !has_search_parameters? %>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "url": "<%= Settings.HOST_URL %>"
      "potentialAction": {
        "@type": "SearchAction",
        "target": "<%= Settings.HOST_URL%>/?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>
<% end %>
